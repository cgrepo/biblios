<div class='container'>
  <div class='row'>
    <div class='col-xs-12 col-md-12'>
      <h1>Listado Escuelas</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class='row'>
    <div class='col-xs-10 col-md-12'>
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Nomre Completo</th>
              <th>Nombre Corto</th>
              <th>Responsable</th>
              <th>Email</th>
              <th>Telefono</th>
              <th>Biblioteca</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @schools.each do |school| %>
              <tr>
                <td><%= school.name %></td>
                <td><%= school.shortname %></td>
                <td><%= school.responsable %></td>
                <td><%= school.email %></td>
                <td><%= school.telephone %></td>
                <td><%= school.library.name %></td>
                <td><%= link_to '', school, title:'mostrar', rel:'tooltip', 
                        class:'btn btn-sm btn-block btn-default glyphicon glyphicon-file'  %></td>
                <td><%= link_to '', edit_school_path(school), title:'editar', rel:'tooltip',
                        class:'btn btn-sm btn-block btn-default glyphicon glyphicon-edit' %></td>
                <td><%= link_to '', school, method: :delete, data: { confirm: 'Esta usted seguro?' }, title:'borrar', rel:'tooltip',
                        class:'btn btn-sm btn-block btn-default glyphicon glyphicon-trash' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-3 col-md-3'>
      <%= link_to 'Nueva Escuela', new_school_path, class:'btn btn-xs btn-default btn-block' %>
    </div>
  </div>
</div>
