<div class='container'>
  <div class='row'>
    <div class='col-xs-8 col-md-8'>
      <p>
        <strong>Nombre:</strong>
        <%= @school.name %>
      </p>
      <p>
        <strong>Nombre Corto:</strong>
        <%= @school.shortname %>
      </p>
      <p>
        <strong>Responsable:</strong>
        <%= @school.responsable %>
      </p>
      <p>
        <strong>Email:</strong>
        <%= @school.email %>
      </p>
      <p>
        <strong>Telefono(s):</strong>
        <%= @school.telephone %>
      </p>
      <p>
        <strong>Biblioteca Asignada:</strong>
        <%= @school.library.name %>
      </p>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-xs-3 col-md-2'>
      <%= link_to 'Editar', edit_school_path(@school), class:'btn btn-md btn-block be-purple_strong' %>
    </div>
    <div class='col-xs-3 col-md-2'>
      <%= link_to 'Regresar', schools_path, class:'btn btn-md btn-block be-purple_strong' %>  
    </div>
  </div>
</div>
