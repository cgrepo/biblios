<p id="notice"><%= notice %></p>

<h1>Listing Responsables</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Library</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responsables.each do |responsable| %>
      <tr>
        <td><%= responsable.fullname %></td>
        <td><%= responsable.email %></td>
        <td><%= responsable.telephone %></td>
        <td><%= responsable.library %></td>
        <td><%= link_to 'Show', responsable %></td>
        <td><%= link_to 'Edit', edit_responsable_path(responsable) %></td>
        <td><%= link_to 'Destroy', responsable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

