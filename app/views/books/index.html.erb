<div class='container'>
  <div class='row'>
    <div class='col-xs-12 col-md-12'>
      <h1>Listado de Libros</h1>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-3 col-md-3'>
      <%= link_to 'Agregar Libro', new_book_path, class:'btn btn-md btn-default btn-block'  %>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-xs-8 col-md-12'>
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>ISBN</th>
              <th>Titulo</th>
              <th>Autor</th>
              <th>Classificacion</th>
              <th>AÃ±o</th>
              <th>Biblioteca</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.isbn %></td>
                <td><%= book.title %></td>
                <td><%= book.autor %></td>
                <td><%= book.classification %></td>
                <td><%= book.published %></td>
                <td><%= book.library.name %></td>
                <td>
                  <%= link_to book, class:'btn btn-md ' do %>
                    <%= octicon 'eye', class:'rigth' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_book_path(book), class:'btn btn-md' do %>
                    <%= octicon 'pencil', class:'rigth' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book, method: :delete, data: { confirm: 'Esta usted seguro?' }, class:'btn btn-sm btn-md' do %>
                    <%= octicon 'trashcan', class:'rigth' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-3 col-md-3'>
      <%= link_to 'Agregar Libro', new_book_path, class:'btn btn-xs btn-default btn-block'  %>
    </div>
    <div class='col-xs col-md-8'><%= will_paginate @books, renderer: BootstrapPagination::Rails %></div>
  </div>
</div>