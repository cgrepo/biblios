<div class='container'>
  <div class='row'>
    <div class='col-xs-12 col-md-12'>
      <h1>Listado de Libros</h1>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-xs-8 col-md-12'>
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>ISBN</th>
              <th>Titulo</th>
              <th>Autor</th>
              <th>Classificacion</th>
              <th>AÃ±o</th>
              <th>Biblioteca</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.isbn %></td>
                <td><%= book.title %></td>
                <td><%= book.autor %></td>
                <td><%= book.classification %></td>
                <td><%= book.published %></td>
                <td><%= book.library.name %></td>
                <td><%= link_to 'Show', book %></td>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-3 col-md-3'>
      <%= link_to 'Agregar Libro', new_book_path, class:'btn btn-xs btn-default btn-block'  %>
    </div>
  </div>
</div>