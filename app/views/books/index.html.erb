<div class='container'>
  <div class='row'>
    <div class='col-xs-12 col-md-12'>
      <h1>Listado de Libros</h1>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-3 col-md-3'>
      <%= link_to 'Agregar Libro', new_book_path, class:'btn btn-md btn-default btn-block'  %>
    </div>
    <div class='col-xs-3 col-md-3'>
      <%= link_to 'Prestamos', borrows_index_path, class:'btn btn-md btn-default btn-block'  %>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-xs-8 col-md-12'>
      <%= render :partial => 'books' %>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs col-md-8'><%= will_paginate @books, renderer: BootstrapPagination::Rails %></div>
  </div>
</div>