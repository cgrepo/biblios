<div class='container be-round_ligth_gray'>
  <div class='row'>
    <div class='col-xs col-md-6'>
      <p>
        <strong>ISBN:</strong>
        <%= @book.isbn %>
      </p>
      <p>
        <strong>Titulo:</strong>
        <%= @book.title %>
      </p>
      <p>
        <strong>Autor:</strong>
        <%= @book.autor %>
      </p>
      <p>
        <strong>Classificación:</strong>
        <%= @book.classification %>
      </p>
      <p>
        <strong>Año:</strong>
        <%= @book.published %>
      </p>
      <p>
        <strong>Biblioteca:</strong>
        <%= @book.library.name %>
      </p>
    </div>
    <div class='col-xs col-md-6'>
      <div class="table-responsive">
          <table class="table table-hover table-striped tblCard", align='center'>
            <thead>
              <tr >
                <th>Ejemplar</th>
                <th>Volumen</th>
                <th>Tomo</th>
                <th>Accesible</th>
                <th colspan="1"></th>
            </tr>
            </thead>
            <tbody >
              <% if @book.profile %>
                <tr>
                  <td><%= @book.profile.copy %></td>
                  <td><%= @book.profile.volumen %></td>
                  <td><%= @book.profile.tome %></td>
                  <td><%= @book.profile.accessible %></td>
                  <td><%= octicon 'pencil', class:'rigth' %></td>
              </tr>
              <% else %>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-md-4'></div>
    <div class='col-xs col-md-2'>
      <%= link_to 'Editar', edit_book_path(@book), class:'btn btn-md btn-block be-purple_strong' %>
    </div>
    <div class='col-xs col-md-2'>
      <%= link_to 'Regresar', books_path, class:'btn btn-md btn-block be-purple_strong' %>  
    </div>
  </div>
</div>
