<div class='container be-round_ligth_gray'>
  <div class='row'>
    <div class='col-xs col-md-6'>
      <p>
        <strong>ISBN:</strong>
        <%= @book.isbn %>
      </p>
      <p>
        <strong>Titulo:</strong>
        <%= @book.title %>
      </p>
      <p>
        <strong>Autor:</strong>
        <%= @book.autor %>
      </p>
      <p>
        <strong>Classificación:</strong>
        <%= @book.classification %>
      </p>
      <p>
        <strong>Año:</strong>
        <%= @book.published %>
      </p>
      <p>
        <strong>Biblioteca:</strong>
        <%= @book.library.name %>
      </p>
    </div>
    <div class='col-xs col-md-6'>
      <div class="table-responsive">
          <table class="table table-hover table-striped tblCard">
            <thead>
              <tr >
                <th>Ejemplar</th>
                <th>Volumen</th>
                <th>Tomo</th>
                <th>Accesible</th>
                <th colspan="2"></th>
            </tr>
            </thead>
            <tbody>
              <tr>
                <% if @book.profile %>
                  <td><%= @book.profile.copy %></td>
                  <td><%= @book.profile.volumen %></td>
                  <td><%= @book.profile.tome %></td>
                  <td><%= @book.profile.accessible %></td>
                  <td><%= link_to edit_book_profile_path(@book,@book.profile.id), 
                          { id:'edbtn',class:'btn btn-md btn-default', :remote => true, 
                            'data-toggle' =>  "modal", 'data-target' => '#modal-window'} do %>
                          <%= octicon 'pencil', class:'rigth' %>
                      <% end %>
                  </td>
                  <td><%= octicon 'trashcan', class:'rigth' %></td>
                <% else %>
                <td></td><td></td><td></td><td></td>
                  <td><%= link_to new_book_profile_path(@book), 
                        {class:'btn btn-md btn-default', :remote => true, 
                        'data-toggle' =>  "modal", 'data-target' => '#modal-window'} do %>
                        <%= octicon 'plus', class:'rigth' %>
                      <% end %>
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
     
</div>

<div class='container'>
  <div class='row'>
    <div class='col-md-4'></div>
    <div class='col-xs col-md-2'>
      <%= link_to 'Editar', edit_book_path(@book), class:'btn btn-md btn-block be-purple_strong' %>
    </div>
    <div class='col-xs col-md-2'>
      <%= link_to 'Regresar', books_path, class:'btn btn-md btn-block be-purple_strong' %>  
    </div>
  </div>
</div>

<div class="modal fade" id="modal-window" role="dialog"></div>