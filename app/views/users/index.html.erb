<p id="notice"><%= notice %></p>

<h1>Listado Usuarios de Sistema</h1>
<div class="container">
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Fullname</th>
          <th>Email</th>
          <!--<th>Password digest</th> -->
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.fullname %></td>
            <td><%= user.email %></td>
            <td><%#= user.password_digest %></td>
            <td><%= link_to 'Show', user, class:'btn btn-default btn-sm' %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-default btn-sm' %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, 
              class:'btn btn-default btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
