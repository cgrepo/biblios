<div class='container'>
  <div class='row'>
    <div class='col-xs-12 col-md-12'>
      <h1>Listado Usuarios de Sistema</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class='row'>
    <div class='col-xs-10 col-md-12'>
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Fullname</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.fullname %></td>
                <td><%= user.email %></td>
                <td class='be-purple_strong'><%= link_to '', user, title:'mostrar', rel:'tooltip', 
                        class:'btn btn-xs btn-block glyphicon glyphicon-file be-border_heroku' %></td>
                <td class='be-purple_strong'><%= link_to '', edit_user_path(user), title:'cambio clave', rel:'tooltip',
                        class:'btn btn-xs btn-block glyphicon glyphicon-edit be-border_heroku' %></td>
                <td class='be-purple_strong'><%= link_to '', user, method: :delete, data: { confirm: 'Esta usted seguro?' }, title:'borrar', rel:'tooltip',
                        class:'btn btn-xs btn-block glyphicon glyphicon-trash be-border_heroku' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-3 col-md-3'>
      <%= link_to 'Nuevo Usuario', new_user_path, class:'btn btn-default btn-block' %>
    </div>
  </div>
</div>