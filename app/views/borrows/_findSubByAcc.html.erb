      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">USUARIO</h4>
    </div>
    <div class="modal-body">
        <div class="table-responsive">
            <table class="table tblSubscriptors">
                <thead>
                    <tr>
                        <th>Rentas</th>
                        <th>Cuenta</th>
                        <th>Nombre Completo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= @rents[0] %></td>
