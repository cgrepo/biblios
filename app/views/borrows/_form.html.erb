<div class='container be-soft_gray'>
    <div class='row '>
        <div class='col-xs col-md-6'>
            <%= bootstrap_form_tag  :html => {id:'title_srch'}  do |f| %>
                <%= f.form_group :cryteria, label:{text:'Buscar por:'} do %>
                    <br>
                    <%= f.radio_button :cryteria_level, 0, label: 'Titulo', inline: true %>
                    <%= f.radio_button :cryteria_level, 1, label: 'ISBN', inline: true %>
                    <%= f.radio_button :cryteria_level, 2, label: 'Autor', inline: true %>
                <% end %>
            <% end %>
        </div>
        <div class='col-xs col-md-6'>
            <%= bootstrap_form_tag  :html => {id:'subscriptor_srch'}  do |f| %>
                <%= f.form_group :subscriptor, label:{text:'Buscar por:'} do %>
                    <br>
                    <%= f.radio_button :subscriptor_level, 0, label: 'Cuenta', inline: true %>
                    <%= f.radio_button :subscriptor_level, 1, label: 'Nombre', inline: true %>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class='row '>
        <div class='col-xs col-md-6' id='search_left_holder'></div>
        <div class='col-xs col-md-6' id='search_rigth_holder'></div>
    </div>
    <div class='row row-results'>
        <div class='col-xs col-md-6' id='book_holder'>
            <div class="table-responsive">
                <table class="table tblBHolder">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Titulo</th>
                      <th>Autor</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
        </div>
        <div class='col-xs col-md-6' id='subs_holder'>
            <div class="table-responsive">
                <table class="table tblSHolder">
                  <thead>
                    <tr>
                      <th>Cuenta</th>
                      <th>Nombre Completo</th>
                      <th colspan='1'></th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-window" role="dialog"></div>