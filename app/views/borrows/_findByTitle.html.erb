  <table class="table">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Autor</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.autor %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
